@{
    const string comments = " comments";
@model List<Blog.Web.Controllers.PostItem>
}
<!DOCTYPE HTML>
        <html lang="en">
        <head>
            <title>Users</title>
            <meta charset="utf-8" />
        </head>
        <body>
            <!--<h1>Users</h1>-->
                
                @foreach (var item in Model)
                {
                        <h1>
                            @Html.DisplayFor(modelItem => item.Title)
                        </h1>
                    <br/>@Html.DisplayFor(modelItem => item.Text)
                           <br/> @Html.DisplayFor(modelItem => item.Name)
                            <br/>@Html.DisplayFor(modelItem => item.CommentsCount) @comments
                }
        </body>
    </html>
